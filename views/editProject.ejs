<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Project - Climate Solutions</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', {page: ''}) %>

  <!-- Hero Section -->
  <div class="hero bg-base-200 my-8 rounded-xl p-10">
    <div class="hero-content text-center">
      <div class="max-w-md">
        <h1 class="text-5xl font-bold">Edit Project</h1>
        <h2 class="text-2xl font-semibold"><%= project.title %></h2>
        <p class="py-6">Modify the project details</p>
      </div>
    </div>
  </div>

  <!-- Form -->
  <div class="container mx-auto px-4 pb-10">
    <div class="max-w-2xl mx-auto">
      <form method="POST" action="/solutions/editProject" class="space-y-4">
        
        <!-- Hidden ID field -->
        <input type="hidden" name="id" value="<%= project.id %>">

        <div class="form-control">
          <label class="label">
            <span class="label-text">Title</span>
          </label>
          <input type="text" name="title" value="<%= project.title %>" class="input input-bordered" required>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Feature Image URL</span>
          </label>
          <input type="url" name="feature_img_url" value="<%= project.feature_img_url %>" class="input input-bordered" required>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Sector</span>
          </label>
          <select name="sector_id" class="select select-bordered" required>
            <% sectors.forEach(sector => { %>
              <option <%= (project.sector_id == sector.id) ? "selected" : "" %> value="<%= sector.id %>">
                <%= sector.sector_name %>
              </option>
            <% }) %>
          </select>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Short Introduction</span>
          </label>
          <textarea name="intro_short" class="textarea textarea-bordered" required><%= project.intro_short %></textarea>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Short Summary</span>
          </label>
          <textarea name="summary_short" class="textarea textarea-bordered" required><%= project.summary_short %></textarea>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Impact</span>
          </label>
          <textarea name="impact" class="textarea textarea-bordered" required><%= project.impact %></textarea>
        </div>

        <div class="form-control">
          <label class="label">
            <span class="label-text">Original Source URL</span>
          </label>
          <input type="url" name="original_source_url" value="<%= project.original_source_url %>" class="input input-bordered" required>
        </div>

        <div class="form-control mt-6 flex flex-row gap-4">
          <button type="submit" class="btn btn-primary flex-1">Update Project</button>
          <a href="/solutions/deleteProject/<%= project.id %>" 
             class="btn btn-error flex-1"
             onclick="return confirm('Are you sure you want to delete this project?')">
            Delete Project
          </a>
        </div>

      </form>
    </div>
  </div>
</body>
</html>
