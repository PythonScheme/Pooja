<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>

<!-- Navbar -->
<%- include("partials/navbar", { page: "/solutions/projects" }) %>

<!-- Hero Section -->
<div class="hero min-h-[200px] bg-base-200">
<div class="hero-content text-center">
<div class="max-w-md">
  <h1 class="text-5xl font-bold">Projects</h1>
  <p class="py-6">Explore climate projects by sector</p>
  <div class="flex flex-wrap justify-center gap-2 mt-4">
    <a href="/solutions/projects?sector=Transportation" class="btn btn-sm btn-outline">Transportation</a>
    <a href="/solutions/projects?sector=Industry" class="btn btn-sm btn-outline">Industry</a>
    <a href="/solutions/projects?sector=Electricity" class="btn btn-sm btn-outline">Electricity</a>
    <a href="/solutions/projects?sector=Food" class="btn btn-sm btn-outline">Food</a>
    <a href="/solutions/projects?sector=Land" class="btn btn-sm btn-outline">Land</a>
  </div>
</div>
</div>
</div>

<!-- Projects Table -->
<div class="container mx-auto p-6">
<% if (projects.length > 0) { %>
<div class="overflow-x-auto">
  <table class="table table-zebra w-full">
    <thead>
      <tr>
        <th>Title</th>
        <th>Sector</th>
        <th>Summary</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% projects.forEach(project=>{ %>
        <tr>
          <td><%= project.title %></td>
          <td>
            <a href="/solutions/projects?sector=<%= project.Sector.sector_name %>">
            <button class="btn btn-outline btn-error"><%= project.Sector.sector_name %></button>
            </a>
          </td>
          <td><%= project.summary_short %></td>
          <td>
            <div class="flex gap-2">
              <a href="/solutions/projects/<%= project.id %>">
                <button class="btn btn-outline btn-info btn-sm">Details</button>
              </a>
              <a href="/solutions/editProject/<%= project.id %>">
                <button class="btn btn-outline btn-warning btn-sm">Edit</button>
              </a>
            </div>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
  <% } else { %>
  <p class="text-center text-gray-500 mt-8">No projects found for this sector.</p>
  <% } %>
</div>

</body>
</html>
