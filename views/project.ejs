<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Projects</title>
  <link href="/css/main.css" rel="stylesheet">
</head>
<body>

<!-- Navbar -->
<%- include("partials/navbar", { page: "/solutions/projects" }) %>

<!-- Hero Section -->
  <div class="hero min-h-[250px] bg-base-200">
    <div class="hero-content text-center">
      <div class="max-w-2xl">
        <h1 class="text-5xl font-bold"><%= project.title %></h1>
        <p class="py-6">Below, you will find detailed information about the project: <%= project.title %></p>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div class="container mx-auto px-4 py-8">
    <div class="flex flex-col lg:flex-row gap-8 items-start">

      <!-- Project Image -->
      <img src="<%= project.feature_img_url %>" alt="Project image" class="w-full lg:w-1/2 rounded-lg shadow-md" />

      <!-- Project Details -->
      <div class="flex-1 space-y-4">
        <div>
          <h2 class="text-xl font-semibold">Introduction</h2>
          <p><%= project.intro_short %></p>
        </div>

        <div>
          <h2 class="text-xl font-semibold">Impact</h2>
          <p><%= project.impact %></p>
        </div>

        <div>
          <h2 class="text-xl font-semibold">Learn More</h2>
          <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-sm btn-primary">
            Original Source
          </a>
        </div>

        <div>
          <h2 class="text-xl font-semibold">Inspiring Quote</h2>
          <div id="quoteBox" class="italic text-gray-600">Loading quote...</div>
          <div id="quoteAuthor" class="text-right text-gray-500 text-sm"></div>
        </div>

        <div class="flex gap-2">
          <a href="#" onclick="history.back(); return false;" class="btn btn-sm btn-outline">← Go Back</a>
          <a href="/solutions/editProject/<%= project.id %>" class="btn btn-sm btn-primary">Edit Project</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Quote Script -->
  <script>
    document.addEventListener("DOMContentLoaded", () => {
      fetch("https://dummyjson.com/quotes/random")
        .then(res => res.json())
        .then(data => {
          document.getElementById("quoteBox").textContent = `"${data.quote}"`;
          document.getElementById("quoteAuthor").textContent = `— ${data.author}`;
        })
        .catch(() => {
          document.getElementById("quoteBox").textContent = "Couldn't load quote.";
        });
    });
  </script>

</body>
</html>
